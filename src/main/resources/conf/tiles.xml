<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
      "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
      "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
      
<tiles-definitions>
	
	<!-- Administrator Layout -->
    <definition name="admin/*.tiles" template="/WEB-INF/view/admin/__admin.jsp">
        <put-attribute name="main" value="/WEB-INF/view/admin/{1}.jsp" />
    </definition>
    
	<!-- Application Layout -->
    <definition name="*.tiles" template="/WEB-INF/view/__application.jsp">
        <put-attribute name="main" value="/WEB-INF/view/{1}.jsp" />
    </definition>
    <definition name="*/*.tiles" template="/WEB-INF/view/__application.jsp">
        <put-attribute name="main" value="/WEB-INF/view/{1}/{2}.jsp" />
    </definition>
    
</tiles-definitions>