<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="net.oopscraft.batman.core.dao.WorkflowDao">

    <resultMap id="workflow" type="net.oopscraft.batman.core.Workflow">
        <result column="wkfl_id" property="id"/>
		<result column="wkfl_name" property="name"/>
    </resultMap>

	<select id="selectWorkflowList" resultMap="workflow">
		<![CDATA[
		SELECT 	 wkfl_id
				,wkfl_name
		FROM 	bat_wkfl_info
		WHERE 	1 = 1
		AND 	sys_delete_yn = 'N'
		LIMIT 	${rows}
		OFFSET 	${(page-1)*rows}
		]]>
	</select>
	
	<select id="selectWorkflow" resultMap="workflow">
		<![CDATA[
		SELECT 	 wkfl_id
				,wkfl_name
		FROM 	bat_wkfl_info
		WHERE 	wkfl_id = #{id}
		]]>
	</select>
	
</mapper>
