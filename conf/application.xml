<?xml version="1.0" encoding="UTF-8"?>
<application class="net.oopscraft.application.Application">

	<!-- ====================================================== -->
	<!-- Application Configuration								-->
	<!-- ====================================================== -->
	<config>
		<theme>__application</theme>
	</config>

	<!-- ====================================================== -->
	<!-- Embedded WebServer(Tomcat) Definition					-->
	<!-- ====================================================== -->
	<webServer id="webServer">
		<port>${application.webServer.port}</port>
		<ssl>${application.webSerer.ssl}</ssl>
		<keyStorePath>${application.webSerer.keyStorePath}</keyStorePath>
		<keyStoreType>${application.webSerer.keyStoreType}</keyStoreType>
		<keyStorePass>${application.webSerer.keyStorePass}</keyStorePass>
		<context path="">
			<resourceBase>webapp/application</resourceBase>
			<descriptor>conf/web.xml</descriptor>
		</context>
	</webServer>

	<!-- ====================================================== -->
	<!-- DataSource Definition									-->
	<!-- ====================================================== -->
	<dataSource id="dataSource">
		<driver>${application.dataSource.driver}</driver>
		<url>${application.dataSource.url}</url>
		<username>${application.dataSource.username}</username>
		<password>${application.dataSource.password}</password>
		<initialSize>${application.dataSource.initialSize}</initialSize>
		<maxActive>${application.dataSource.maxActive}</maxActive>
		<validationQuery>${application.dataSource.validationQuery}</validationQuery>
	</dataSource>
	
	<!-- ====================================================== -->
	<!-- JPA+Hibernate EntityManagerFactory Definition			-->
	<!-- ====================================================== -->
	<entityManagerFactory id="entityManagerFactory">
		<dataSource>dataSource</dataSource>
		<databasePlatform>${application.entityManagerFactory.databasePlatform}</databasePlatform>
		<packagesToScan>${application.entityManagerFactory.packagesToScan}</packagesToScan>
	</entityManagerFactory>
	
	<!-- ====================================================== -->
	<!-- MYBATIS SqlSessionFactory Definition					-->
	<!-- ====================================================== -->
	<sqlSessionFactory id="sqlSessionFactory">
		<dataSource>dataSource</dataSource>
		<databaseId>${application.sqlSessionFactory.databaseId}</databaseId>
		<mapperLocations>${application.sqlSessionFactory.mapperLocations}</mapperLocations>
	</sqlSessionFactory>
	
	<!-- ====================================================== -->
	<!-- Message Source											-->
	<!-- ====================================================== -->
	<messageSource id="messageSource">
		<basename>file:conf/i18n/message</basename>
		<cacheSeconds>3</cacheSeconds>
	</messageSource>
	

</application>